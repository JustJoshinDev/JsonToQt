{
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "title": "Your Name"
    },
    "age": {
      "type": "integer",
      "title": "Age",
      "minimum": 0,
      "maximum": 120
    },
    "bio": {
      "type": "string",
      "title": "Short Bio",
      "widget": "textarea"
    },
    "favoriteColor": {
      "type": "string",
      "title": "Favorite Color",
      "enum": ["Red", "Green", "Blue"]
    },
    "subscribe": {
      "type": "boolean",
      "title": "Subscribe to newsletter",
      "widget": "checkbox"
    },
    "gender": {
      "type": "string",
      "title": "Gender",
      "enum": ["Male", "Female", "Other"],
      "widget": "radio"
    },
    "skills": {
      "type": "array",
      "title": "Skills",
      "widget": "multiselect",
      "options": ["Python", "C++", "JavaScript", "Design"],
      "default": ["Python", "Design"]
    },
    "additionalInfo": {
      "title": "Additional Info",
      "widget": "toggle",
      "children": {
        "notes": {
          "type": "string",
          "title": "Notes",
          "widget": "textarea"
        },
        "rating": {
          "type": "number",
          "title": "Rating",
          "minimum": 0.0,
          "maximum": 5.0,
          "step": 0.1
        }
      }
    },
    "favoriteBooks": {
      "title": "Favorite Books",
      "type": "array",
      "widget": "multi_toggle",
      "enum": ["Fiction", "Non-Fiction"],
      "children_map": {
        "Fiction": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "title": "Book Title"
            },
            "author": {
              "type": "string",
              "title": "Author"
            }
          }
        },
        "Non-Fiction": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "title": "Book Title"
            },
            "author": {
              "type": "string",
              "title": "Author"
            },
            "topic": {
              "type": "string",
              "title": "Topic"
            }
          }
        }
      }
    }
  }
}
